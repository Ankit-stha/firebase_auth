<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/backk"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:gravity="center"
        android:background="@drawable/roundbox">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/logo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/logo"
            android:layout_marginStart="110dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:id="@+id/txt0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome To Firebase!!"
            android:textStyle="bold"
            android:layout_below="@id/logo"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            />





        <EditText
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/edittext_roundbox"
            android:hint="Enter Your Email ID/Mobile Number"
            android:layout_below="@+id/txt0"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/black"
            android:inputType="textEmailAddress"
            android:gravity="center"
            android:autofillHints=""
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/txt1"
            android:layout_marginTop="20dp"
            android:id="@+id/txt2"
            app:passwordToggleEnabled="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Password"
                android:textColorHint="@color/black"
                android:gravity="center"
                android:inputType="textPassword"
                android:background="@drawable/edittext_roundbox"
                android:autofillHints=""

                />


        </com.google.android.material.textfield.TextInputLayout>
        <RadioButton
            android:id="@+id/radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Me"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/txt2"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Your Password"
            android:textColor="#E90808"
            android:layout_below="@id/txt2"
            android:layout_marginStart="180dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:onClick="forget"
            />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginStart="120dp"
            android:layout_below="@id/txt3"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:onClick="login"
            android:backgroundTint="#FF9800"

            />

        <LinearLayout
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You don't have account?"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signup"
                android:textStyle="bold"
                android:textColor="#D71212"
                android:onClick="signup1"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/facebook"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/txt4"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:onClick="facebook"
            android:background="@drawable/edittext_roundbox">
            <ImageView
                android:id="@+id/img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/facebook1"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="facebook"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textStyle="bold"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/txt4"
            android:layout_toRightOf="@id/facebook"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:onClick="apple1"
            android:background="@drawable/edittext_roundbox">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/apple"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textStyle="bold"


                />

        </LinearLayout>



    </RelativeLayout>





</LinearLayout>